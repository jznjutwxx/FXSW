
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "工程管理-骨干河道";
}

<div id="app">
    <com-query v-on:emit-event="getEmitEvent" ref="smallQuery"></com-query>
    <div id="tableData">
        <el-table v-bind:data="tableData"
                   v-bind:height="height"
                  border
                  stripe
                  style="width: 100%"
                  class="tableCss">
            <el-table-column type="index"
                             v-bind:index="indexMethod"
                             label="序号"
                             header-align="center"
                             align="center"
                             width="60">
            </el-table-column>
            <el-table-column prop="n_year"
                             label="年度"
                             header-align="center"
                             align="center"
                             width="100">
            </el-table-column>
            <el-table-column header-align="center"
                             label="工程名称">
                <template slot-scope="scope">
                    @*href="LookProject?t="*@
                    <a  v-on:click="openLook(scope.row.s_id)">{{ scope.row.s_name }}</a>
                </template>
            </el-table-column>
            <el-table-column prop="s_project_no"
                             header-align="center"
                             align="right"
                             label="项目编号">
            </el-table-column>
            <el-table-column prop="n_pace_status"
                             header-align="center"
                             label="工程状态" >
            </el-table-column>
            <el-table-column prop="s_town"
                             header-align="center"
                             align="center"
                             label="所属镇" width="100">
            </el-table-column>
            <el-table-column prop="s_unit_design"
                             header-align="center"
                             label="设计单位">
            </el-table-column>
            <el-table-column prop="s_legal_person"
                             header-align="center"
                             label="项目法人" width="100">
            </el-table-column>
            <el-table-column label="操作"
                             header-align="center"
                             align="center"
                             width="300">
                <template slot-scope="scope">
                    <el-button size="mini" v-on:click="openEdit(scope.row.s_id)">编辑</el-button>
                    <el-button size="mini" type="info" v-on:click="openFileManage(scope.row.s_id)">文件管理</el-button>
                    <el-button size="mini" type="danger">删除</el-button>
                </template>
            </el-table-column>
        </el-table>
    </div>
    <div style="text-align:right;padding-top:10px;">
        <el-pagination @@size-change="sizeChange" @@current-change="currentChange" layout="total, prev, pager, next, jumper" v-bind:current-page.sync="currentPage" v-bind:page-size="pagesize" v-bind:total="total">
        </el-pagination>
    </div>
</div>

@Html.Partial("~/Views/BackboneRiverway/components/query.cshtml")

<script>
    new Vue({
        el: "#app",
        data: {
            styles: {
                width: '90%',
                height: '0px',
                float: 'left',
            },
            height: '0px',
            tableData: [],
            total: 0, //默认数据总数
            pagesize: 10,//每页的数据条数
            currentPage: 1,//默认开始页面
            params: []
        },
        components: {
            "com-query": query,
        },//
        mounted: function () {
            this.setSize()
            this.resize()
            this.setTableData('/BackboneRiverway/GetProjectData', { Page: this.currentPage, pageSize: this.pagesize, startYear: moment().format("YYYY"), endYear: moment().format("YYYY"), Status: this.$refs.smallQuery.Town, Status: this.$refs.smallQuery.Town })
        },
        methods: {
            //indexMethod(index) {
            //    return (index + 1) * this.currentPage
            //},
            indexMethod: function(index) {
                return (index + 1) + (this.currentPage - 1) * this.pagesize;
            },
            openLook: function (ID) {
                window.location = "LookProject?id=" + ID;
                //window.open('LookProject?id=' + ID);
            },
            getEmitEvent: function (param) {
                this.setTableData('/BackboneRiverway/GetProjectData', {
                    Page: this.currentPage, pageSize: this.pagesize, startYear: param.startYear, endYear: param.endYear, Status: param.Status, Town: param.Town
                });
            },
            setTableData: function (url, param) {
                this.params = param;
                axios.post(url, param)
                  .then(function (response) {
                      var tempData = JSON.parse(response.data);
                      //var datas = tempData.EnginListGetResponse.engin_list;
                      this.tableData = tempData.EnginListGetResponse.engin_list;
                      this.total = tempData.EnginListGetResponse.totalCount;
                  }.bind(this))
                  .catch(function (error) {
                      console.log(error);
                  });

            },
            openFileManage: function (ID) {
                window.location = "FileManage?id=" + ID;
            },
            openEdit: function (ID) {
                window.location = "EditProject?id=" + ID;
            },
            currentChange: function (val) {
                this.params.Page = val;
                //this.setData('/FarmlandWater/GetTabData', this.params);
                this.setTableData('/BackboneRiverway/GetProjectData', this.params)
            },

            sizeChange: function (pagesize) {
                this.currentPage = pagesize;
            },
            setSize: function () {
                var docH = document.documentElement.clientHeight
                var queryH = this.$refs.smallQuery.$el.clientHeight
                var contentH = docH - queryH - 40
                this.height = contentH - 40 
            },
            resize: function () {
                $(window).resize(function () {
                    this.setSize()
                }.bind(this));
            },
        }

    })
</script>

