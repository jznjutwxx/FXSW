<script>
    var comSzyLeft = {
        template: '#com-szyleft',
        data: function () {
            return {
                leftheight: document.documentElement.clientHeight - 32,
                marginHeight: 0,
                marginWidth: 0,
                marginCHeight:0,
                param: {},
                lineLegendData: ['计划用水量', '实际用水量'],
                lineGridTop: '28%',
                lineyAxisName: '亿（m³）',
                radarRadius:85,
                lineOption: null,
                GYpieOption: null,
                SHpieOption: null,
                NYpieOption: null,
            }
        },
        components: {
            "com-line": comLine,
            "com-pie": comPie,
        },
        watch: {
            leftheight: function (val) {
                this.leftheight = val;
            },
            getScreen: function () {
                var topHeight = document.getElementById("topdiv").clientHeight;
                var topHei = document.getElementById("top").clientHeight;
                var topWidth = document.getElementById("topdiv").clientWidth;
                var topWid = document.getElementById("top").clientWidth;
                this.marginHeight = (topHeight - topHei) / 2;
                this.marginWidth = (topWidth - topWid) / 2;
            }
        },
        mounted: function () {
            const that = this;

            $("#interval").css("margin-top", (document.documentElement.clientHeight * 0.05 - 6) / 2);
            $(window).resize(function () {
                that.leftheight = document.documentElement.clientHeight - 30;
                $("#interval").css("margin-top", (document.documentElement.clientHeight * 0.05 - 6) / 2);
            });
            that.init();
        },
        methods: {
            init: function () {
                this.setData('/WaterRes/GetData', null);
                this.resize();
                this.setSize();
            },
            
            setData: function (url, param) {
                this.setLineData(url, param);
                this.setGYPieData(url, param);
                this.setSHPieData(url, param);
                this.setNYpieData(url, param);
                this.setRadarData(url, param);
            },
            setLineData: function (url, param) {
                this.$refs.line.charts.showLoading();
                axios.post(url).then(function (response) {
                    this.$refs.line.charts.hideLoading();
                    this.lineOption = {
                        color: ['#ebcf12', '#0dd9dc'],
                        legend: {
                            selectedMode: false,
                            data: this.lineLegendData,
                           // data: ['计划用水量', '实际用水量'],
                            textStyle: {
                                color: '#ffffff'
                            },
                            top:10
                        },
                        grid: {
                            top: this.lineGridTop,
                            left: '4%', 
                            right: '10%'
                        },
                        xAxis: {
                            type: 'category',
                            data: ['2月', '4月', '6月', '8月', '10月', '12月'],
                            axisLabel: {
                                interval: 0,//横轴信息全部显示
                                rotate: 0,//-30度角倾斜显示
                                color: '#fff'
                            },
                            legend: {
                                textStyle: {
                                    color: '#ffffff'
                                }
                            },
                            axisLine: {
                                lineStyle: {
                                    color: '#3d4997',
                                }
                            },
                            axisTick: { show:false },
                        },
                        yAxis: {
                            type: 'value',
                            name: this.lineyAxisName,
                            nameTextStyle: {
                                padding: [0, 0, -5, 30]
                            },
                            splitLine: {
                                show: true,//保留网格线
                                lineStyle: {
                                    color: '#3d4997'
                                }
                            },
                            axisLine: {
                                show: false,
                                lineStyle: {
                                    color: '#ffffff',
                                }
                            },
                            axisTick: { show: false },
                        },
                        series: [
                            {
                                name: '计划用水量',
                                type: 'line',
                                smooth: true,
                                symbol: 'rect',
                                data: [5.1, 3.8, 9.7, 2.6, 3.5, 2],
                                //label: {
                                //    normal: {
                                //        show: true,
                                //        position: 'top'
                                //    }
                                //}
                            },
                            {
                                name: '实际用水量',
                                type: 'line',
                                smooth: true,
                                symbol: 'rect',
                                data: [1, 3.4, 2, 1.2, 7, 2.1],
                                //label: {
                                //    normal: {
                                //        show: true,
                                //        position: 'top'
                                //    }
                               // }
                            }
                        ]
                    };

                }.bind(this))
                  .catch(function (error) {
                      console.log(error);
                  });
            },
            setGYPieData: function (url, param) {
               // this.$children[5].charts.showLoading();
                axios.post(url).then(function (response) {
                 //   this.$children[5].charts.hideLoading();
                    this.GYpieOption = {
                        color: ['#1486FD', '#849BE2'],
                        title: {
                            text: '54%',
                            textStyle: {
                                fontSize: 14,
                                color: '#ffffff',
                                fontWeight: 'normal'
                            },
                            x:'center',
                            y:'center'
                        },
                        grid: {
                            top:'0'
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: ['45%', '65%'],
                                label: {
                                    normal: {
                                        show: false,
                                    }
                                },
                                hoverAnimation: false,
                                labelLine: {
                                    normal: {
                                        show: false
                                    }
                                },
                                data: [
                                    { value: 54, name: '工业用水' },
                                    { value: 46, name: '' }
                                ]
                            }
                        ]
                    }
                }.bind(this))
                  .catch(function (error) {
                      console.log(error);
                  });
            },
            setSHPieData: function (url, param) {
                //this.$children[5].charts.showLoading();
                axios.post(url).then(function (response) {
                   // this.$children[5].charts.hideLoading();
                    this.SHpieOption = {
                        color: ['#BD64E5', '#849BE2'],
                        title: {
                            text: '26%',
                            textStyle: {
                                fontSize: 14,
                                color: '#ffffff',
                                fontWeight: 'normal'
                            },
                            x: 'center',
                            y: 'center'
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: ['45%', '65%'],
                                hoverAnimation: false,
                                label: {
                                    normal: {
                                        show: false,
                                        position: 'inner',
                                        formatter: "{d}%"
                                    }
                                },
                                labelLine: {
                                    normal: {
                                        show: false
                                    }
                                },
                                data: [
                                    { value: 26, name: '生活用水' },
                                    { value: 74, name: '' }
                                ]
                            }
                        ]
                    }
                }.bind(this))
                  .catch(function (error) {
                      console.log(error);
                  });
            },
            setNYpieData: function (url, param) {
               // this.$children[6].charts.showLoading();
                axios.post(url).then(function (response) {
                //    this.$children[6].charts.hideLoading();
                    this.NYpieOption = {
                        color: ['#04C9A8', '#849BE2'],
                        tooltip: {
                            trigger: 'item',
                            formatter: "{d}%"
                        },
                        title: {
                            text: '24%',
                            textStyle: {
                                fontSize: 14,
                                color: '#ffffff',
                                fontWeight: 'normal'
                            },
                            x: 'center',
                            y: 'center'
                        },
                        series: [
                            {
                                name: '访问来源',
                                type: 'pie',
                                radius: ['45%', '65%'],
                                hoverAnimation: false,
                                label: {
                                    normal: {
                                        show: false,
                                        position: 'inner',
                                        formatter: "{d}%"
                                    }
                                },
                                labelLine: {
                                    normal: {
                                        show: false
                                    }
                                },
                                data: [
                                    { value: 24, name: '农业用水' },
                                    { value: 76, name: '' }
                                ]
                            }
                        ]
                    }
                }.bind(this))
                  .catch(function (error) {
                      console.log(error);
                  });
            },
            setRadarData: function (url, param) {
                // 基于准备好的dom，初始化echarts实例
                var radarChart = echarts.init(document.getElementById('radarCharts'));
                axios.post(url).then(function (response) {
                    var radarOption = {
                        color: '#50a6ff',
                        tooltip: {
                            trigger: 'axis'
                        },
                        textStyle: {
                            color: 'white',
                            fontWeight: 'normal',
                            fontSize: 14
                        },
                        radar: [
                            {
                                indicator: [
                                    {text: '综合', max: 100}, // max: '100%'
                                    { text: '管水网7项', max: 100 },
                                    {text: '出水厂非常规64项', max: 100  },
                                    { text: '出水厂常规42项', max: 100 },
                                    { text: '原水29项', max: 100 }
                                ],
                                radius:this.radarRadius,
                                center: ['50%', '50%'],
                            }

                        ],
                        series: [
                            {
                                type: 'radar',
                                radarIndex: 0,
                                label: {
                                    normal: {
                                        show: true,
                                        position: 'inner',
                                        formatter: "{c}%",

                                    }
                                },
                                data: [
                                    {
                                        value: [95, 80, 95, 90, 93],
                                        name: '第三季度水质汇总'
                                    }
                                ]
                            }
                        ]
                    }
                    radarChart.setOption(radarOption);
                    $(window).resize(function () {
                        setTimeout(function () {
                            radarChart.resize();
                        }.bind(this), 100);
                    }.bind(this));
                }.bind(this))
                  .catch(function (error) {
                      console.log(error);
                  });
            },

            resize: function () {
                $(window).resize(function () {
                    this.setSize();
                }.bind(this));
            },
            setSize: function () {
                var docH = document.documentElement.clientHeight;
                var contentH = docH - 50;

                this.height = contentH / 3;
                if (docH<=550) {
                    this.lineLegendData = [];
                    this.lineGridTop = '12%';
                    this.lineyAxisName = '';
                    this.radarRadius = 40;
                } else if (docH >= 900) {
                    this.radarRadius = 100;
                }
            }
        }
    }
</script>

