<script>
    var comBaseTable = {
        template: '#com-base-table',
        props: {
            height: 0,
            tabledatas: {
                type: Object,
                default: function () {
                    return {
                        tableData: [],
                        tableKey:[]
                    }
                }
            }
        },
        watch: {
            tabledatas: function (val, oldVal) {
                this.setData(val)
            },
            height: function (val, oldVal) {
                this.maxHeight = val
            }
        },
        data: function () {
            return {
                maxHeight:0,
                tableData: [],
                tableKey:[]
            }
        },
        mounted: function () {
            
        },
        methods: {
            setData: function (data) {
                this.tableData = data.tableData
                this.tableKey = data.tableKey
            }
        }
    };
</script>

